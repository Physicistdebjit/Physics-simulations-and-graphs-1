   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from matplotlib.animation import FuncAnimation\n",
    "import time\n",
    "import scienceplots\n",
    "from IPython.display import HTML\n",
    "plt.style.use(['science','notebook','grid','dark_background'])\n",
    "\n",
    "L, N = 10, 1001\n",
    "x, dx = np.linspace(-L, L, N, retstep=True)\n",
    "V = np.where(x < 0, 0, 1)\n",
    "mu, sig, k = -2, 1, 1.0  # Adjusted the initial conditions\n",
    "psi = np.exp(-(x - mu)**2 / sig) * np.exp(1j * k * x)\n",
    "dt = 0.005\n",
    "a = 1j * dt / 2\n",
    "b = a / (2 * dx**2)\n",
    "d = 2 * b + a * V[1:-1]\n",
    "d1 = b * np.ones(N - 3)\n",
    "A = np.diag(1 + d) - np.diag(d1, k=1) - np.diag(d1, k=-1)\n",
    "B = np.diag(1 - d) + np.diag(d1, k=1) + np.diag(d1, k=-1)\n",
    "C = np.dot(np.linalg.inv(A), B)\n",
    "\n",
    "# Set dark background style\n",
    "plt.style.use('dark_background')\n",
    "\n",
    "fig, ax = plt.subplots()\n",
    "line_psi, = ax.plot(x, np.abs(psi)**2, label=r'$|\\psi(x)|^2$')\n",
    "ax.set_ylim(-0.5, 1.5)\n",
    "\n",
    "# Change color of the barrier to red and add label\n",
    "ax.plot(x, V, color='red', label='Potential Barrier')\n",
    "\n",
    "# Add legend\n",
    "ax.legend(fontsize=12)\n",
    "\n",
    "# Add text annotation for timestamp\n",
    "time_text = ax.text(0.1, 0.94, '', transform=ax.transAxes, color='white', fontsize=10, ha='center', bbox=dict(facecolor='black', edgecolor='white', boxstyle='round'))\n",
    "\n",
    "start_time = time.time()\n",
    "\n",
    "def update(frame):\n",
    "    global psi\n",
    "    psi[1:-1] = np.dot(C, psi[1:-1])\n",
    "    line_psi.set_ydata(np.abs(psi)**2)\n",
    "    \n",
    "    elapsed_time = time.time() - start_time\n",
    "    minutes, seconds = divmod(elapsed_time, 60)\n",
    "    time_text.set_text(f'Time: {int(minutes):02d}:{int(seconds):02d}')\n",
    "# Create the animation\n",
    "animation = FuncAnimation(fig, update, frames=2000, interval=10, blit=False, repeat=True, repeat_delay=1000)\n",
    "\n",
    "plt.xlabel('x')\n",
    "plt.ylabel(r'$|\\psi(x)|^2$')\n",
    "plt.grid(True, linestyle='--', alpha=0.5)\n",
    "plt.title(r'behaviour of $|\psi(x)|^2$ at the step potential',size='10')\n",
    "animation.save('animation.html', writer='html')\n",
    "\n",
    "# Display the HTML5 video in the notebook\n",
    "HTML('animation.html')\n",
    "\n"
   ]
